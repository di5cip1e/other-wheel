{
  "name": "wheel-within-wheel-game",
  "version": "1.0.0",
  "description": "A comprehensive browser-based hot-seat multiplayer wheel spinning game with physics simulation and customization",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:production": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "serve": "webpack serve --mode production --port 8080",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/(?!e2e|performance|statistical)",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:statistical": "jest --testPathPattern=tests/statistical",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:build": "node scripts/verify-build.js",
    "test:a11y": "pa11y-ci --sitemap http://localhost:8080/sitemap.xml",
    "test:browser": "jest --testPathPattern=tests/cross-browser",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "benchmark": "node scripts/run-benchmarks.js",
    "docs:generate": "typedoc src/index.ts --out docs/generated",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:check-links": "markdown-link-check docs/**/*.md",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "ci": "npm run lint && npm run type-check && npm run test:coverage && npm run build"
  },
  "keywords": [
    "game",
    "wheel",
    "spinner",
    "multiplayer",
    "physics",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.49.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "canvas": "^2.11.2"
  }
}
